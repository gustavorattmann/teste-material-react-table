generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model People {
  id             Int      @id @default(autoincrement())
  cpf            String   @db.VarChar(11)
  rg             String
  nome           String
  dataNascimento DateTime @db.Date
  cargo          String
  grau           Grau
  email          String   @unique
  ddi            String   @db.VarChar(3)
  ddd            String   @db.VarChar(2)
  telefone       String   @db.VarChar(9)
  cep            String   @db.VarChar(8)
  logradouro     String
  endereco       String
  numeroEndereco String
  bairro         String
  municipio      String
  uf             String
}

enum Grau {
  FUNDAMENTAL
  MEDIO
  TECNICO
  GRADUACAO
  POS
  MESTRADO
  DOUTORADO
  PHD
}
